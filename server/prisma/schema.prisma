// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id
  slug        String
  name        String
  image       Json
  category    String
  categoryImage Json
  new         Boolean
  price       Int
  description String
  features    String
  includes    Json
  gallery     Json
  others      Json
}
